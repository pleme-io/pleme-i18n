{
  "name": "@pleme/i18n",
  "version": "1.0.0",
  "description": "Internationalization wrapper for react-i18next with Brazilian Portuguese support",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "check": "biome check --diagnostic-level=warn src",
    "check:types": "tsc --noEmit",
    "format": "biome check --write src",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.3.0",
    "react-i18next": ">=14.0.0",
    "i18next": ">=23.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-i18next": {
      "optional": false
    },
    "i18next": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^3.2.0",
    "@vitest/ui": "^3.2.0",
    "@biomejs/biome": "^1.9.4",
    "jsdom": "^27.0.0",
    "react": "^18.3.1",
    "react-i18next": "^14.0.0",
    "i18next": "^23.0.0",
    "tsdown": "^0.2.0",
    "typescript": "^5.7.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "react-i18next",
    "brazilian",
    "portuguese",
    "typescript",
    "library",
    "nexus",
    "pleme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pleme-io/pleme-i18n.git"
  },
  "license": "MIT",
  "author": "Pleme.io Team"
}
